<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hjq.widget.layout.SettingBar
            android:id="@+id/carNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftColor="@color/textColor"
            app:bar_leftText="牌照"
            app:bar_rightHint="陕A89392" />

        <View style="@style/HorizontalLineStyle" />

        <com.hjq.widget.layout.SettingBar
            android:id="@+id/carModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftColor="@color/textColor"
            app:bar_leftText="车型"
            app:bar_rightHint="面包" />


        <View style="@style/HorizontalLineStyle" />

        <com.hjq.widget.layout.SettingBar
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftColor="@color/textColor"
            app:bar_leftText="电话号码"
            app:bar_rightHint="19089883892" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/car_msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/vip" />

            <ImageView
                android:id="@+id/car_msg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/vip" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>