<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logistics_img"
        android:layout_width="67dp"
        android:layout_height="67dp"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logistics_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="运输中" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logistics_msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:background="@drawable/bg_radius_f19012"
                android:textColor="#F19012"
                tools:text="1吨" />

            <TextView
                android:id="@+id/logistics_msg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="11sp"
                android:background="@drawable/bg_radius_127bf1"
                android:textColor="#127BF1"
                tools:text="2件" />

            <TextView
                android:id="@+id/logistics_msg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="11sp"
                android:background="@drawable/bg_radius_a9a9a9"
                android:textColor="#A9A9A9"
                tools:text="3方" />
        </LinearLayout>

        <TextView
            android:id="@+id/logistics_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/location"
            android:drawablePadding="5dp"
            android:text="当前位置" />
    </LinearLayout>

</LinearLayout>